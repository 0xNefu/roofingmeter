  <!-- Interactive JavaScript -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Service selection tracking
      let selectedService = null;
      
      // Define all services with their details
      const servicesData = {
        'audit': {
          name: 'Strategic Audit',
          price: '$499',
          type: 'service',
          description: 'Comprehensive analysis of your social strategy'
        },
        'ghostwriter': {
          name: 'Viral Thread Creation',
          price: '$750', 
          type: 'service',
          description: 'Professionally crafted Twitter threads'
        },
        'howto': {
          name: 'Sponsored How-To Guide',
          price: '$1,500',
          type: 'service',
          description: 'Educational content featuring your project'
        },
        'newsletter': {
          name: 'Newsletter Feature',
          price: '$800',
          type: 'service',
          description: 'Spotlight in our premium crypto newsletter'
        },
        '7day-raid': {
          name: '7-Day Alpha Launch Raid',
          price: '$2,997',
          type: 'service',
          description: 'Week of intensive Twitter engagement'
        },
        'research': {
          name: 'Sponsored Research Article',
          price: '$4,000',
          type: 'service',
          description: 'In-depth bullish analysis published with authority'
        },
        'alpha-raid': {
          name: 'Alpha Launch Raid (30-Day)',
          price: '$6,997',
          type: 'package',
          description: 'Full-scale Twitter dominance for your launch'
        },
        'ecosystem': {
          name: 'Ecosystem Package',
          price: '$18,000',
          type: 'package',
          description: 'Complete market positioning: hype + credibility'
        }
      };

      // Typeform base URL
      const typeformBaseUrl = 'https://form.typeform.com/to/IAiMkSC9';
      
      // Get DOM elements
      const serviceSelectBtns = document.querySelectorAll('.service-select-btn, .package-select-btn');
      const selectionSummary = document.getElementById('selection-summary');
      const selectedServiceDetails = document.getElementById('selected-service-details');
      const clearSelectionBtn = document.getElementById('clear-selection');
      const modal = document.getElementById('service-modal');
      const modalServiceDesc = document.getElementById('modal-service-desc');
      const modalContinue = document.getElementById('modal-continue');
      const modalClose = document.getElementById('modal-close');
      const typeformEmbed = document.getElementById('typeform-embed');

      // Function to update Typeform URL with service parameter
      function updateTypeformUrl(serviceId) {
        if (!serviceId) {
          // Reset to base URL
          typeformEmbed.src = `${typeformBaseUrl}?typeform-embed=embed-widget`;
          return;
        }
        
        // Create URL with service parameter
        const url = new URL(typeformBaseUrl);
        url.searchParams.set('service', serviceId);
        url.searchParams.set('typeform-embed', 'embed-widget');
        
        // Update iframe src
        typeformEmbed.src = url.toString();
        
        // Also update the direct link
        const directLink = document.querySelector('a[href*="typeform.com"]');
        if (directLink && directLink.href.includes('typeform.com')) {
          const directUrl = new URL(typeformBaseUrl);
          directUrl.searchParams.set('service', serviceId);
          directLink.href = directUrl.toString();
        }
      }

      // Service selection handlers
      serviceSelectBtns.forEach(btn => {
        btn.addEventListener('click', (e) => {
          const serviceId = btn.dataset.service || btn.dataset.package;
          const service = servicesData[serviceId];
          
          if (service) {
            selectedService = serviceId;
            
            // Show modal
            modalServiceDesc.textContent = `You've selected "${service.name}" (${service.price}). This will be pre-filled in your application. Continue to the form?`;
            modal.showModal();
          }
        });
      });

      // Modal continue button - apply selection
      modalContinue.addEventListener('click', () => {
        modal.close();
        
        const service = servicesData[selectedService];
        
        // Update selection summary
        selectedServiceDetails.innerHTML = `
          <div class="flex justify-between items-start">
            <div>
              <div class="text-white font-medium text-lg">${service.name}</div>
              <div class="text-cyan-400">${service.price}</div>
              <div class="text-gray-400 text-sm mt-2">${service.description}</div>
            </div>
            <div class="text-right">
              <span class="px-3 py-1 ${service.type === 'package' ? 'bg-orange-500/20 text-orange-300' : 'bg-cyan-500/20 text-cyan-300'} rounded-full text-xs font-bold">
                ${service.type === 'package' ? 'PACKAGE' : 'SERVICE'}
              </span>
            </div>
          </div>
        `;
        
        // Show selection summary
        selectionSummary.classList.remove('hidden');
        
        // Update Typeform URL
        updateTypeformUrl(selectedService);
        
        // Scroll to form smoothly
        setTimeout(() => {
          document.getElementById('apply').scrollIntoView({ 
            behavior: 'smooth',
            block: 'start'
          });
        }, 300);
      });

      // Modal close button
      modalClose.addEventListener('click', () => {
        modal.close();
        selectedService = null;
      });

      // Clear selection button
      clearSelectionBtn.addEventListener('click', () => {
        selectedService = null;
        selectionSummary.classList.add('hidden');
        updateTypeformUrl(null); // Reset to base URL
      });

      // Close modal on outside click
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.close();
        }
      });

      // Close modal on Escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal.open) {
          modal.close();
        }
      });

      // Category filtering
      const categoryButtons = document.querySelectorAll('.service-category-btn');
      const serviceCards = document.querySelectorAll('.service-card');
      
      categoryButtons.forEach(btn => {
        btn.addEventListener('click', () => {
          const category = btn.dataset.category;
          
          // Update active button
          categoryButtons.forEach(b => {
            b.classList.remove('active', 'bg-gradient-to-r', 'from-cyan-500', 'to-blue-600');
            b.classList.add('bg-gray-800', 'hover:bg-gray-700');
          });
          
          btn.classList.add('active', 'bg-gradient-to-r', 'from-cyan-500', 'to-blue-600');
          btn.classList.remove('bg-gray-800', 'hover:bg-gray-700');
          
          // Filter services
          serviceCards.forEach(card => {
            if (category === 'all' || card.dataset.category === category) {
              card.style.display = 'block';
              setTimeout(() => {
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
              }, 10);
            } else {
              card.style.opacity = '0';
              card.style.transform = 'translateY(20px)';
              setTimeout(() => {
                card.style.display = 'none';
              }, 300);
            }
          });
        });
      });

      // Function to set up Typeform for hidden field
      function setupTypeformHiddenField() {
        const observer = new MutationObserver(() => {
          const typeformIframe = document.getElementById('typeform-embed');
          if (typeformIframe && typeformIframe.contentWindow) {
            try {
              // This requires your Typeform to have a hidden field named "service"
              // You can set this up in Typeform form settings
              const urlParams = new URLSearchParams(window.location.search);
              const serviceParam = urlParams.get('service');
              if (serviceParam) {
                const message = {
                  type: 'TF_SET_VARS',
                  vars: {
                    service: serviceParam
                  }
                };
                typeformIframe.contentWindow.postMessage(message, '*');
              }
            } catch (e) {
              console.log('Typeform integration:', e);
            }
          }
        });

        observer.observe(document.body, { childList: true, subtree: true });
      }

      // Initialize Typeform integration
      setupTypeformHiddenField();
    });
  </script>

