---
import Base from "@/layouts/Base.astro";
import { getCollection } from 'astro:content';
import { CATEGORY_HIERARCHY } from '@/lib/categories';

// Get all posts for suggestions
const allPosts = await getCollection('posts', ({ data }) => !data.draft);
const popularPosts = allPosts
  .sort((a, b) => (b.data.date || 0) - (a.data.date || 0))
  .slice(0, 6);
---

<Base 
  title="404 - Page Not Found | RoofingMeter" 
  description="Oops! This page doesn't exist. Browse our roofing cost guides, material comparisons, and contractor resources."
>
  
  <section class="py-20 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        
        <!-- Error Code with Roofing Style -->
        <div class="text-center mb-8">
          <div class="inline-flex items-center gap-3 mb-6 px-6 py-3 bg-blue-50 border border-blue-200 rounded-2xl">
            <span class="text-blue-600 text-2xl">‚ö†Ô∏è</span>
            <span class="text-blue-700 font-bold text-xl">ERROR 404</span>
            <span class="text-gray-600">PAGE NOT FOUND</span>
          </div>
          
          <h1 class="text-6xl md:text-8xl font-black mb-4">
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 via-blue-500 to-amber-500">
              404
            </span>
          </h1>
          
          <p class="text-2xl md:text-3xl text-gray-800 mb-4 max-w-3xl mx-auto">
            Looks like this page got blown off the roof!
          </p>
          
          <p class="text-gray-600 text-lg mb-8 max-w-2xl mx-auto">
            The page you're looking for doesn't exist. Don't worry - we've got plenty of roofing resources for you.
            <span class="text-blue-600 font-medium"> Your roofing project is still on track!</span>
          </p>
          
          {/* Main CTA */}
          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
            <a 
              href="/" 
              class="group relative px-8 py-4 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-bold rounded-xl hover:shadow-2xl hover:shadow-blue-500/40 transition-all duration-300 transform hover:-translate-y-1"
            >
              <span class="relative z-10">üè† Return to Homepage</span>
            </a>
            
            <a 
              href="/blog" 
              class="px-8 py-4 bg-white border-2 border-blue-500 text-blue-600 font-bold rounded-xl hover:bg-blue-50 hover:border-blue-600 transition-all duration-300"
            >
              üìö Browse All Guides
            </a>
          </div>
        </div>
        
        {/* Popular Roofing Categories */}
        <div class="mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-amber-500">
              Explore Our Roofing Resources
            </span>
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
            {Object.entries(CATEGORY_HIERARCHY)
              .filter(([key]) => {
                // Only show categories that have posts
                const postsInCategory = allPosts.filter(p => p.data.category === key);
                return postsInCategory.length > 0;
              })
              .slice(0, 6)
              .map(([category, data]) => {
                const postsInCategory = allPosts.filter(p => p.data.category === category);
                
                return (
                  <a 
                    href={`/categories/${category}`}
                    class="group bg-white border border-gray-200 rounded-2xl p-6 hover:border-blue-500 hover:shadow-xl hover:shadow-blue-500/10 transition-all duration-300 hover:-translate-y-1"
                  >
                    <div class="flex items-start gap-4 mb-4">
                      <div class="text-2xl text-blue-600">{data.icon}</div>
                      <div>
                        <h3 class="text-xl font-bold text-gray-900 mb-1 group-hover:text-blue-600 transition-colors">
                          {data.name}
                        </h3>
                        <p class="text-gray-600 text-sm">
                          {postsInCategory.length} guides
                        </p>
                      </div>
                    </div>
                    
                    <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                      {data.description}
                    </p>
                    
                    <div class="flex items-center justify-between">
                      <span class="text-blue-600 text-sm font-medium">
                        Explore ‚Üí
                      </span>
                      <span class="text-gray-500 text-xs bg-gray-100 px-2 py-1 rounded">
                        {category.includes('cost') ? 'üí∞ Cost Guide' : 'üìö Resource'}
                      </span>
                    </div>
                  </a>
                );
              })}
          </div>
          
          <div class="text-center mt-8">
            <a 
              href="/categories" 
              class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 transition-colors font-medium"
            >
              View all 6 roofing categories ‚Üí
            </a>
          </div>
        </div>
        
        {/* Popular Guides */}
        <div class="mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-green-500">
              Popular Roofing Guides
            </span>
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
            {popularPosts.map(post => (
              <a 
                href={`/blog/${post.slug}`}
                class="group bg-white border border-gray-200 rounded-2xl p-6 hover:border-blue-500 hover:shadow-xl hover:shadow-blue-500/10 transition-all duration-300 hover:-translate-y-1"
              >
                <div class="mb-4">
                  <span class="inline-block px-3 py-1 bg-blue-50 text-blue-700 rounded-full text-xs font-bold">
                    {post.data.category?.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') || 'Roofing Guide'}
                  </span>
                </div>
                
                <h3 class="text-lg font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors line-clamp-2">
                  {post.data.title}
                </h3>
                
                <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                  {post.data.description || 'Essential roofing information...'}
                </p>
                
                <div class="flex items-center justify-between text-sm">
                  <span class="text-gray-500">
                    {new Date(post.data.date).toLocaleDateString('en-US', { 
                      month: 'short', 
                      day: 'numeric',
                      year: 'numeric' 
                    })}
                  </span>
                  <span class="text-blue-600 font-medium">
                    Read Guide ‚Üí
                  </span>
                </div>
              </a>
            ))}
          </div>
        </div>
        
        {/* Search & Help Section */}
        <div class="bg-gradient-to-r from-blue-50 to-amber-50 rounded-3xl border border-blue-200 p-8 max-w-3xl mx-auto">
          <div class="text-center">
            <div class="text-4xl mb-4">üîç</div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Need Help With Your Roofing Project?</h3>
            <p class="text-gray-700 mb-6">
              Can't find what you're looking for? Try our search or get in touch for personalized help.
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a 
                href="/search" 
                class="px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-semibold rounded-xl hover:shadow-lg hover:shadow-blue-500/30 transition-all"
              >
                üîç Search Our Guides
              </a>
              <a 
                href="/contact" 
                class="px-6 py-3 bg-white text-blue-600 font-semibold rounded-xl border-2 border-blue-500 hover:bg-blue-50 transition-colors"
              >
                üìû Contact Us
              </a>
            </div>
            
            <div class="mt-6 pt-6 border-t border-blue-200">
              <p class="text-sm text-gray-600">
                <span class="font-medium">Quick Tip:</span> Check your spelling or try different keywords. 
                Most roofing questions are covered in our cost guides or contractor resources.
              </p>
            </div>
          </div>
        </div>

        {/* Emergency Roofing Help */}
        <div class="mt-12 bg-gradient-to-r from-amber-50 to-red-50 rounded-2xl border border-amber-200 p-6 max-w-2xl mx-auto">
          <div class="flex items-start gap-4">
            <div class="text-3xl text-amber-600">üö®</div>
            <div>
              <h4 class="text-lg font-bold text-gray-900 mb-2">Emergency Roofing Situation?</h4>
              <p class="text-gray-700 text-sm mb-3">
                If you have an active leak or storm damage, contact a local roofing contractor immediately.
              </p>
              <a 
                href="/find-contractors" 
                class="inline-flex items-center gap-2 text-amber-700 hover:text-amber-800 font-medium text-sm"
              >
                üë∑ Find Emergency Roofers Near You ‚Üí
              </a>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </section>
  
  <style>
    /* Line clamp utilities */
    .line-clamp-1 {
      overflow: hidden;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 1;
    }
    
    .line-clamp-2 {
      overflow: hidden;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
    }
    
    /* Smooth transitions */
    * {
      transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    /* Gradient animation */
    @keyframes gradient {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }
    
    .animate-gradient {
      background-size: 200% 200%;
      animation: gradient 4s ease infinite;
    }
  </style>
  
</Base>