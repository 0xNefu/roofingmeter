---
import config from "@/config/config.json";

const {
  title,
  description,
  image,
  canonical,
  noindex = false,
  type = "website", // 'website' or 'article'
  publishedTime,
  author = "RoofingMeter",
  section = "Roofing", // Changed from "DeFi" to "Roofing"
} = Astro.props;

// Simple, direct image URL
const finalTitle = title ?? "RoofingMeter - Professional Roofing Information & Guides";
const finalDescription = description && description !== "true" ? description : "Free roofing cost calculators, material comparisons, contractor guides, and maintenance tips for homeowners";
// Use provided image OR fall back to default roofing image
const finalImage = image ? image : "https://roofingmeter.com/images/roofing-guide.jpg";

// Normalize canonical URL - remove trailing slash
const cleanPath = Astro.url.pathname.replace(/\/$/, ""); // Remove trailing slash
const finalCanonical = canonical ?? `https://roofingmeter.com${cleanPath}`;
---

<!-- Simple, reliable social meta tags -->
{!noindex && <meta name="robots" content="index, follow" />}
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Primary Meta Tags -->
<title>{finalTitle}</title>
<meta name="title" content={finalTitle} />
<meta name="description" content={finalDescription} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={finalCanonical} />
<meta property="og:title" content={finalTitle} />
<meta property="og:description" content={finalDescription} />
<meta property="og:image" content={finalImage} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={finalTitle} />
<meta property="og:site_name" content="RoofingMeter" />

<!-- Additional Open Graph tags for articles -->
{type === 'article' && (
  <>
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    <meta property="article:author" content={author} />
    <meta property="article:section" content={section} />
    <meta property="article:tag" content="Roofing" />
    <meta property="article:tag" content="Home Improvement" />
    <meta property="article:tag" content="Contractors" />
    <meta property="article:tag" content="Home Maintenance" />
  </>
)}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={finalCanonical} />
<meta name="twitter:title" content={finalTitle} />
<meta name="twitter:description" content={finalDescription} />
<meta name="twitter:image" content={finalImage} />
<meta name="twitter:image:alt" content={finalTitle} />
<meta name="twitter:site" content="@roofingmeter" />
<meta name="twitter:creator" content="@roofingmeter" />

<!-- Canonical URL -->
<link rel="canonical" href={finalCanonical} />