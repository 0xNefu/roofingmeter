---
/* Tailwind CSS breakpoint size indicator */
/* Only visible in development mode */
const isDev = import.meta.env.DEV;
---

{isDev && (
  <div class="fixed bottom-4 left-4 z-50 flex flex-col gap-1 rounded-lg bg-gray-900/90 p-3 font-mono text-xs font-bold leading-none text-white shadow-2xl backdrop-blur">
    <div class="block sm:hidden">xs (&lt;640)</div>
    <div class="hidden sm:block md:hidden">sm (≥640)</div>
    <div class="hidden md:block lg:hidden">md (≥768)</div>
    <div class="hidden lg:block xl:hidden">lg (≥1024)</div>
    <div class="hidden xl:block 2xl:hidden">xl (≥1280)</div>
    <div class="hidden 2xl:block">2xl (≥1536)</div>
  </div>
)}