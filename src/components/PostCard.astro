---
// src/components/PostCard.astro
export interface Props {
  post: any;
}

const { post } = Astro.props;
const { title, description, date, coverImage, coverAlt, category } = post.data;
const { slug } = post;

const dateObj = new Date(date);
const isValid = !isNaN(dateObj.getTime());
const formattedDate = isValid 
  ? dateObj.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })
  : 'Date TBD';
---

<article class="bg-white dark:bg-gray-900 rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 border border-gray-200 dark:border-gray-800">
  <a href={`/posts/${slug}`} class="block">
    {coverImage && (
      <div class="aspect-[16/9] overflow-hidden bg-gray-100 dark:bg-gray-800">
        <img 
          src={coverImage} 
          alt={coverAlt || title}
          class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
          loading="lazy"
        />
      </div>
    )}
    <div class="p-6">
      <div class="flex items-center gap-4 text-sm text-gray-600 dark:text-gray-400 mb-4">
        {category && (
          <span class="px-4 py-1 bg-gradient-to-r from-primary/20 to-primary/10 text-primary font-medium rounded-full text-xs">
            {category}
          </span>
        )}
        <time class="font-medium">{formattedDate}</time>
      </div>
      <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 line-clamp-2 hover:text-primary transition-colors">
        {title}
      </h3>
      {description && (
        <p class="text-gray-600 dark:text-gray-300 line-clamp-3 leading-relaxed">
          {description}
        </p>
      )}
      <span class="inline-block mt-5 text-primary font-semibold hover:underline">
        Read more â†’
      </span>
    </div>
  </a>
</article>