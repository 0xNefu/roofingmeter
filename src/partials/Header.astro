---
import menu from "@/config/menu.json";
import { IoSearch } from "react-icons/io5";
import { FaPhoneAlt } from "react-icons/fa";

const main = menu.main;
---

<header class="py-4 md:py-6 border-b border-gray-200 bg-white">
  <div class="mx-auto px-4 md:px-6 lg:px-8 xl:px-12 max-w-7xl flex items-center justify-between gap-4 md:gap-6">
    
    <!-- LOGO + NAME -->
    <div class="flex-shrink-0">
      <a href="/" class="flex items-center space-x-2 md:space-x-3">
        <img
          src="/images/logo.png"
          alt="RoofingMeter"
          class="w-8 h-8 md:w-10 md:h-10 rounded-lg object-cover"
        />
        <div>
          <div class="text-lg md:text-xl font-bold text-blue-700 whitespace-nowrap">
            RoofingMeter
          </div>
          <div class="text-xs text-gray-600 hidden md:block">
            Accurate Roof Estimates & Guides
          </div>
        </div>
      </a>
    </div>

    <!-- Desktop Navigation - Roofing Pillars -->
    <nav class="hidden md:flex items-center justify-center flex-1 max-w-3xl mx-4">
      <div class="flex items-center space-x-2 lg:space-x-4">
        {main.map(item => {
          if (item.dropdown) {
            return (
              <div class="relative group">
                <button class="text-sm font-semibold text-gray-700 hover:text-blue-600 transition whitespace-nowrap flex items-center gap-1 px-2 py-1 rounded-lg hover:bg-blue-50">
                  {item.name} <span class="text-xs text-blue-500">▼</span>
                </button>
                <ul class="absolute left-1/2 -translate-x-1/2 mt-2 w-56 bg-white border border-gray-200 rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50 pt-2 overflow-hidden">
                  {item.dropdown.map(sub => (
                    <li>
                      <a
                        href={sub.url}
                        class="block px-4 py-3 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition whitespace-nowrap border-b border-gray-100 last:border-b-0"
                      >
                        <div class="flex items-center gap-3">
                          <div class="text-blue-500">
                            {sub.icon || "🏠"}
                          </div>
                          <div>
                            <div class="font-medium">{sub.name}</div>
                            {sub.description && (
                              <div class="text-xs text-gray-500 mt-1">{sub.description}</div>
                            )}
                          </div>
                        </div>
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            );
          } else if (item.name === "Free Estimate") {
            return (
              <a
                href={item.url}
                class="relative text-sm font-bold text-white px-4 py-2 rounded-lg transition whitespace-nowrap shadow-md hover:shadow-lg overflow-hidden"
              >
                <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-blue-700 rounded-lg"></div>
                <span class="relative z-10 flex items-center gap-2">
                  💰 {item.name}
                </span>
              </a>
            );
          } else if (item.name === "Find Contractors") {
            return (
              <a
                href={item.url}
                class="relative text-sm font-bold text-white px-4 py-2 rounded-lg transition whitespace-nowrap shadow-md hover:shadow-lg overflow-hidden"
              >
                <div class="absolute inset-0 bg-gradient-to-r from-amber-600 to-amber-700 rounded-lg"></div>
                <span class="relative z-10 flex items-center gap-2">
                  👷 {item.name}
                </span>
              </a>
            );
          } else {
            return (
              <a
                href={item.url}
                class="text-sm font-semibold text-gray-700 hover:text-blue-600 transition whitespace-nowrap px-2 py-1 rounded-lg hover:bg-blue-50"
              >
                {item.name}
              </a>
            );
          }
        })}
      </div>
    </nav>

    <!-- Icons: Phone, Search + Mobile Hamburger -->
    <div class="flex items-center gap-3 md:gap-4 lg:gap-5 flex-shrink-0">
      <!-- Phone Number - Desktop -->
      <div class="hidden md:flex items-center gap-2 bg-blue-50 px-4 py-2 rounded-lg">
        <FaPhoneAlt class="w-4 h-4 text-blue-600" />
        <a href="tel:+18885557663" class="text-blue-700 font-bold text-sm hover:text-blue-800 transition">
          1-888-555-ROOF
        </a>
      </div>
      
      <!-- Search -->
      <a href="/search" class="text-gray-700 hover:text-blue-600 transition p-2">
        <IoSearch class="w-5 h-5 md:w-5 md:h-5" />
      </a>

      <!-- Mobile Hamburger -->
      <div class="md:hidden">
        <button id="mobile-menu-toggle" class="text-gray-700 z-50 p-1">
          <svg id="menu-open-icon" class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg id="menu-close-icon" class="w-7 h-7 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>

<!-- Mobile Menu (Separate div for simplicity) -->
<div id="mobile-menu" class="fixed inset-0 top-16 bg-white z-40 overflow-y-auto hidden">
  <div class="px-6 py-8 space-y-1">
    <div class="mb-6 p-4 bg-blue-50 rounded-xl">
      <div class="flex items-center gap-3 mb-2">
        <FaPhoneAlt class="w-5 h-5 text-blue-600" />
        <a href="tel:+18885557663" class="text-blue-700 font-bold text-lg hover:text-blue-800 transition">
          1-888-555-ROOF
        </a>
      </div>
      <p class="text-sm text-gray-600">Call for free roofing consultation</p>
    </div>
    
    {main.flatMap(item => {
      const items = [];
      if (item.dropdown) {
        items.push({ name: item.name, url: null, isHeader: true });
        items.push(...item.dropdown.map(sub => ({ ...sub, isHeader: false })));
      } else {
        items.push({ ...item, isHeader: false });
      }
      return items;
    }).map(item => {
      if (item.isHeader) {
        return (
          <div class="text-xs font-semibold text-blue-600 uppercase pt-6 pb-2 border-t border-gray-200 first:border-t-0 first:pt-0">
            {item.name}
          </div>
        );
      } else if (item.name === "Free Estimate") {
        return (
          <a
            href={item.url}
            class="relative block text-lg font-bold text-white px-6 py-4 rounded-xl transition shadow-lg my-2 overflow-hidden"
            onclick="document.getElementById('mobile-menu').classList.add('hidden')"
          >
            <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl"></div>
            <span class="relative z-10 flex items-center justify-center gap-3">
              💰 {item.name}
            </span>
          </a>
        );
      } else if (item.name === "Find Contractors") {
        return (
          <a
            href={item.url}
            class="relative block text-lg font-bold text-white px-6 py-4 rounded-xl transition shadow-lg my-2 overflow-hidden"
            onclick="document.getElementById('mobile-menu').classList.add('hidden')"
          >
            <div class="absolute inset-0 bg-gradient-to-r from-amber-600 to-amber-700 rounded-xl"></div>
            <span class="relative z-10 flex items-center justify-center gap-3">
              👷 {item.name}
            </span>
          </a>
        );
      } else {
        return (
          <a
            href={item.url}
            class="block text-lg font-semibold text-gray-800 hover:text-blue-600 py-3 px-4 hover:bg-blue-50 rounded-lg transition"
            onclick="document.getElementById('mobile-menu').classList.add('hidden')"
          >
            <div class="flex items-center gap-3">
              <div class="text-blue-500 text-lg">
                {item.icon || "🏠"}
              </div>
              <div>{item.name}</div>
            </div>
          </a>
        );
      }
    })}

    <div class="pt-6 border-t border-gray-200 mt-4">
      <a 
        href="/contact" 
        class="block text-lg font-semibold text-gray-800 hover:text-blue-600 py-3"
        onclick="document.getElementById('mobile-menu').classList.add('hidden')"
      >
        Contact Us
      </a>
    </div>

    <div class="pt-4 border-t border-gray-200 flex flex-col gap-4">
      <div class="text-sm text-gray-600">Follow Us:</div>
      <div class="flex gap-6">
        <a href="https://facebook.com/roofingmeter" class="text-blue-600 hover:text-blue-700">Facebook</a>
        <a href="https://twitter.com/roofingmeter" class="text-blue-600 hover:text-blue-700">Twitter</a>
        <a href="https://instagram.com/roofingmeter" class="text-blue-600 hover:text-blue-700">Instagram</a>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuOpenIcon = document.getElementById('menu-open-icon');
    const menuCloseIcon = document.getElementById('menu-close-icon');
    
    mobileMenuToggle.addEventListener('click', () => {
      const isOpen = mobileMenu.classList.toggle('hidden');
      menuOpenIcon.classList.toggle('hidden', !isOpen);
      menuCloseIcon.classList.toggle('hidden', isOpen);
    });
    
    // Close menu when clicking outside
    document.addEventListener('click', (event) => {
      if (!mobileMenu.classList.contains('hidden') && 
          !mobileMenu.contains(event.target) && 
          !mobileMenuToggle.contains(event.target)) {
        mobileMenu.classList.add('hidden');
        menuOpenIcon.classList.remove('hidden');
        menuCloseIcon.classList.add('hidden');
      }
    });
    
    // Close menu on Escape key
    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape' && !mobileMenu.classList.contains('hidden')) {
        mobileMenu.classList.add('hidden');
        menuOpenIcon.classList.remove('hidden');
        menuCloseIcon.classList.add('hidden');
      }
    });
  });
</script>

<style>
  /* Smooth transitions */
  * {
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Mobile menu backdrop */
  #mobile-menu {
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
  }
</style>